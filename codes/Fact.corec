prog factorielle {
  def Fact { [in: N; out: (f,N)]
    Rec: N==0?f[N]=1:{
                       N=N-1;
                       f[N+1]=(N+1)*OutFact(Fact())
                     }
  }

  def OutFact { [in: (f,N), N; out: F]
    Loc: F
    Rec: F=f[N]
  }

  def Main {
    Loc: N
    Rec: {
      printstr("Entrez une valeur entière : ");
      read(N);
      printstr("Le résultat de factorielle est : ");
      print(OutFact(Fact()))
    }
  }
}
